{
  "compilerOptions": {
    "target": "ES2024",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true, // Allow JavaScript files
    "checkJs": true, // Type check JavaScript files
    "noEmit": true // Don't emit files, just type check
  },
  "include": ["**/*.js", "**/*.ts"],
  "exclude": ["node_modules"]
}
